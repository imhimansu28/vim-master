{
    "version": 1,
    "author": "@nvimmaster",
    "purpose": "Design instructions (JSON-only) for a clean Material-style website that hosts 50 Neovim challenges and a flashcards learning mode. No purple tones; use light teal/cyan accents with slate neutrals. This JSON is intended for the implementer ('cursor').",
    "meta": {
        "title": "Neovim Mastery — Challenges & Flashcards",
        "i18n_default_locale": "en",
        "date_format": "YYYY-MM-DD"
    },
    "ui": {
        "theme": {
            "palette": {
                "background": "#F7FBFF",
                "surface": "#FFFFFF",
                "surfaceAlt": "#EEF2F6",
                "textPrimary": "#0F172A",
                "textSecondary": "#475569",
                "muted": "#64748B",
                "primary": "#0EA5A5",
                "primaryWeak": "#CCFBF1",
                "primaryStrong": "#0D9488",
                "success": "#16A34A",
                "warning": "#F59E0B",
                "danger": "#DC2626",
                "divider": "#E2E8F0"
            },
            "rules": {
                "avoidColors": [
                    "#800080",
                    "#6B21A8",
                    "#A855F7",
                    "#9333EA",
                    "#7C3AED"
                ],
                "radius": 16,
                "elevation": {
                    "level1": "0 1px 2px rgba(2,6,23,0.07), 0 1px 1px rgba(2,6,23,0.05)",
                    "level2": "0 8px 24px rgba(2,6,23,0.08), 0 2px 8px rgba(2,6,23,0.06)"
                },
                "density": "comfortable",
                "contrastMinimumAA": true
            }
        },
        "typography": {
            "fontFamily": {
                "sans": "Inter, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif",
                "mono": "Roboto Mono, ui-monospace, SFMono-Regular, Menlo, Consolas, monospace"
            },
            "scale": {
                "h1": 28,
                "h2": 22,
                "h3": 18,
                "body": 16,
                "label": 13,
                "caption": 12
            },
            "lineHeight": {
                "tight": 1.2,
                "base": 1.6
            },
            "letterSpacing": {
                "heading": 0.2,
                "body": 0
            }
        },
        "layout": {
            "containerMaxWidth": 1200,
            "grid": {
                "sidebarWidth": 280,
                "gutter": 16,
                "cardMin": 260
            },
            "header": {
                "sticky": true,
                "blur": 6,
                "paddingY": 20,
                "paddingX": 24
            }
        },
        "cursor": {
            "style": "pointer",
            "caretColor": "#0EA5A5",
            "sizePx": 16,
            "hoverLift": true,
            "focusRing": {
                "width": 2,
                "color": "#22D3EE",
                "radius": 12,
                "offset": 2
            },
            "behaviors": {
                "interactiveSelectors": [
                    "button",
                    "a",
                    "[role=button]",
                    ".chip",
                    ".card",
                    ".challenge"
                ],
                "textSelectors": [
                    "input[type=text]",
                    "textarea",
                    "[contenteditable=true]"
                ],
                "pointerForInteractive": true,
                "ibeamForText": true
            },
            "microcopy": "Use a crisp pointer for actionable UI, I-beam for text fields. Subtle elevate-on-hover for buttons/cards; no novelty cursors."
        },
        "components": {
            "button": {
                "variants": {
                    "primary": {
                        "bg": "{theme.palette.primary}",
                        "fg": "#FFFFFF",
                        "border": "transparent",
                        "shadow": "{theme.rules.elevation.level1}",
                        "hover": {
                            "brightness": 1.03,
                            "translateY": -1
                        },
                        "active": {
                            "translateY": 0
                        }
                    },
                    "ghost": {
                        "bg": "#FFFFFF",
                        "fg": "{theme.palette.textPrimary}",
                        "border": "1px solid {theme.palette.divider}",
                        "hoverBg": "{theme.palette.surfaceAlt}"
                    }
                },
                "shape": {
                    "radius": 12,
                    "paddingY": 10,
                    "paddingX": 14
                }
            },
            "card": {
                "bg": "{theme.palette.surface}",
                "radius": 14,
                "border": "1px solid {theme.palette.divider}",
                "shadow": "{theme.rules.elevation.level1}",
                "headerBorder": true,
                "padding": 14
            },
            "input": {
                "bg": "#FFFFFF",
                "border": "1px solid {theme.palette.divider}",
                "radius": 10,
                "paddingY": 10,
                "paddingX": 12,
                "placeholderColor": "#94A3B8",
                "focus": {
                    "ring": "{ui.cursor.focusRing}",
                    "borderColor": "{theme.palette.primaryStrong}"
                }
            },
            "chip": {
                "bg": "#FFFFFF",
                "fg": "{theme.palette.textPrimary}",
                "border": "1px solid {theme.palette.divider}",
                "radius": 999,
                "paddingY": 6,
                "paddingX": 10,
                "active": {
                    "bg": "{theme.palette.primaryWeak}",
                    "fg": "#065F5B",
                    "borderColor": "{theme.palette.primary}"
                }
            },
            "badge": {
                "bg": "{theme.palette.surfaceAlt}",
                "fg": "{theme.palette.textSecondary}",
                "radius": 999,
                "paddingY": 3,
                "paddingX": 8,
                "weight": 600
            }
        },
        "motion": {
            "duration": {
                "fast": 120,
                "base": 180,
                "slow": 240
            },
            "easing": {
                "inOut": "cubic-bezier(0.4, 0, 0.2, 1)",
                "out": "cubic-bezier(0, 0, 0.2, 1)"
            },
            "effects": {
                "hoverLift": {
                    "translateY": -1,
                    "shadow": "level2"
                },
                "press": {
                    "translateY": 0
                }
            },
            "reducedMotionRespect": true
        },
        "accessibility": {
            "skipToContent": true,
            "keyboardShortcuts": {
                "focusSearch": "/",
                "clearSearch": "Escape"
            },
            "ariaLandmarks": true,
            "focusVisibleOnly": true
        }
    },
    "flashcards_ui": {
        "widgetAccent": "#0EA5A5",
        "cardBg": "#FFFFFF",
        "cardShadow": "0 8px 24px rgba(2,6,23,0.08)",
        "fontScale": 1.0,
        "controls": {
            "showHint": true,
            "revealOnSpace": true,
            "nextOnRightArrow": true,
            "prevOnLeftArrow": true
        },
        "progressBar": {
            "height": 6,
            "bg": "#E2E8F0",
            "fill": "#0EA5A5"
        }
    },
